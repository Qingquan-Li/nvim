{
  "languageserver": {
    "cpp": {
      "command": "ccls",
      "filetypes": ["cpp", "c", "cc", "cxx", "c++", "h", "hh", "hpp", "hxx"],
      "rootPatterns": ["compile_commands.json", ".ccls", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}

